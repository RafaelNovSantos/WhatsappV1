@code{
    [Parameter]
    public List<QuickResponse> WelcomeMessages { get; set; } = new List<QuickResponse>();

    public Origin TransformOrigin { get; set; } = Origin.TopCenter;
    public Origin AnchorOrigin { get; set; } = Origin.BottomLeft;
    private string criterio = "";
    private bool _readOnly;


    private bool Procurar(QuickResponse welcomemessage)
    {
        if (string.IsNullOrWhiteSpace(criterio))
            return true;

        return welcomemessage.Id.ToString().Contains(criterio, StringComparison.OrdinalIgnoreCase)
               || welcomemessage.Message.Contains(criterio, StringComparison.OrdinalIgnoreCase);
    }

 

}

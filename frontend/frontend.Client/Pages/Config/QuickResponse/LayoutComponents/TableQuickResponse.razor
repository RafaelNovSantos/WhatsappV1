

<MudTable T="MessageQuickResponse" Items="@WelcomeMessages"
          Filter="new Func<MessageQuickResponse, bool>(Procurar)" 
          Bordered="true" Dense="true" Class="tableEdit" ReadOnly="@_readOnly">


    <ToolBarContent >

        <MudText Class="MudTextSize">Mensagens</MudText>
        @*<MudTextField @bind-Value="criterio"
                      Placeholder="Procurar..."
                      Class="searchBar input" Style="    display: flex;
    justify-content: end;" />*@
        <div class="InputContainer mud-elevation-1">
            <input type="text"             placeholder="Procurar..."

                   @bind="criterio"
                   name="text" class="searchinput" id="input" >
            <div class="border"></div>

            <label for="input" class="labelforsearch">
                <svg viewBox="0 0 512 512" class="searchIcon"><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"></path></svg>
            </label>

        </div>
        
        <button class="bookmarkBtn">
  <span class="IconContainer">
   <MudIcon Color="Color.Dark" Icon="@Icons.Material.Outlined.Add"></MudIcon>
  </span>
            <p class="text">Adicionar</p>
        </button>

    </ToolBarContent>

    <HeaderContent >
    

        <MudTh>
            <MudTableSortLabel SortBy="new Func<MessageQuickResponse, object>(e => e.Id)">
                ID
            </MudTableSortLabel>
        </MudTh>


   
      

        <MudTh>
            <MudTableSortLabel SortBy="new Func<MessageQuickResponse, object>(e => e.Message)">
               Mensagem
            </MudTableSortLabel>
        </MudTh>

        <MudTh Style="">Editar</MudTh>

    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Mensagem">@context.Message</MudTd>

        <MudTd DataLabel="Editar">
            <MudMenu AnchorOrigin="@AnchorOrigin" TransformOrigin="@TransformOrigin" Dense="true" Icon="@Icons.Material.Filled.MoreVert"
                     AriaLabel="Abrir menu" >

                <MudMenuItem IconSize="Size.Small" IconColor="Color.Dark" Icon="@Icons.Material.Outlined.Edit">
                    Editar
                </MudMenuItem>
           
                <MudMenuItem IconSize="Size.Small" IconColor="Color.Error" Icon="@Icons.Material.Filled.DeleteOutline" >Apagar</MudMenuItem>
            </MudMenu>
        </MudTd>
    </RowTemplate>


    <PagerContent >
        <MudTablePager PageSizeOptions="[5, 15, 25, 50, 100]"


                       RowsPerPageString="Máximo de Mensagens por página:"

        />
    </PagerContent>
</MudTable>











@code{
    [Parameter]
    public List<MessageQuickResponse> WelcomeMessages { get; set; } = new List<MessageQuickResponse>();
    
    /*private List<QuickResponse> quickResponses = new List<QuickResponse>();*/

    protected override async Task OnInitializedAsync()
    {
        // Exemplo de inicialização
        WelcomeMessages = new List<MessageQuickResponse>
        {
            new MessageQuickResponse { Id = "1", Message = "Olá, seja bem vindo" },
            new MessageQuickResponse { Id = "2", Message = "Como posso te ajudar?" },
        };
    }


    public Origin TransformOrigin { get; set; } = Origin.TopCenter;
    public Origin AnchorOrigin { get; set; } = Origin.BottomLeft;
    private string criterio = "";
    private bool _readOnly;


    private bool Procurar(MessageQuickResponse welcomemessage)
    {
        if (string.IsNullOrWhiteSpace(criterio))
            return true;

        return welcomemessage.Id.ToString().Contains(criterio, StringComparison.OrdinalIgnoreCase)
               || welcomemessage.Message.Contains(criterio, StringComparison.OrdinalIgnoreCase);
    }

 

}

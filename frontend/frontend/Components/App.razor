<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="/"/>
    <link rel="stylesheet" href="frontend.styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <link href="css/MudBlazor.min.css" rel="stylesheet" />
    @*<link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />*@
    <link rel="icon" type="image/ico" href="favicon.ico"/>
    <HeadOutlet @rendermode="InteractiveWebAssembly"/>
    <script>
        window.getScreenSize = () => {
            return {
                width: window.innerWidth,
                height: window.innerHeight
            };
        };

        window.onresize = () => {
            if (window.dotNetResizeCallback) {
                window.dotNetResizeCallback.invokeMethodAsync('UpdateScreenSize', {
                    width: window.innerWidth,
                    height: window.innerHeight
                });
            }
        };

        window.setDotNetResizeCallback = (dotNetHelper) => {
            window.dotNetResizeCallback = dotNetHelper;
        };

      

    </script>

</head>

<body>
<Routes @rendermode="InteractiveWebAssembly"/>
<script src="_framework/blazor.web.js"></script>
<script src="_content/MudBlazor/MudBlazor.min.js"></script>
<script src="pages/Messages.razor.js"></script>
</body>

</html>